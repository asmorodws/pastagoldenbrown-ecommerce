generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  phone         String?   // Add phone field
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  orders        Order[]
  cart          CartItem[]
  addresses     Address[]
  verificationTokens VerificationToken[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime
  userId  String
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([email, token])
}

model Address {
  id          String   @id @default(cuid())
  userId      String
  label       String   // e.g., "Rumah", "Kantor", "Alamat Utama"
  recipientName String
  phone       String
  address     String   @db.Text
  city        String
  cityId      String?  // RajaOngkir city_id for shipping calculation
  province    String
  provinceId  String?  // RajaOngkir province_id
  zipCode     String
  country     String   @default("Indonesia")
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders      Order[]
  
  @@index([userId])
}

model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?   @db.Text
  image       String?
  halal       Boolean   @default(true) // Tandai apakah kategori halal atau tidak
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  products    Product[]
}

model Product {
  id          String     @id @default(cuid())
  name        String
  slug        String     @unique
  description String?    @db.Text
  price       Decimal    @db.Decimal(10, 2) // Base price (can be overridden by variant)
  image       String?
  images      String?    @db.Text // JSON array of image URLs
  categoryId  String
  featured    Boolean    @default(false)
  
  // Product details
  brand       String?
  sku         String?    // Base SKU
  weight      Decimal?   @db.Decimal(10, 2)
  dimensions  String?
  
  // Discount fields
  discount    Decimal?   @db.Decimal(5, 2) // Percentage discount (0-100)
  discountPrice Decimal? @db.Decimal(10, 2) // Calculated discounted price
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  category    Category         @relation(fields: [categoryId], references: [id])
  variants    ProductVariant[] // Product variants with individual stock, price, etc.
  orderItems  OrderItem[]
  cartItems   CartItem[]
}

model ProductVariant {
  id           String   @id @default(cuid())
  productId    String
  name         String   // e.g., "30g", "100g", "1kg"
  label        String?  // e.g., "Ukuran: 30g" - for display
  sku          String?  // Unique SKU for this variant
  price        Decimal? @db.Decimal(10, 2) // Override product price if set
  stock        Int      @default(0)
  image        String?  // Variant-specific image (override product image)
  sortOrder    Int      @default(0) // For ordering variants in display
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  product      Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  cartItems    CartItem[]
  orderItems   OrderItem[]
  
  @@unique([productId, name]) // Prevent duplicate variant names for same product
  @@index([productId])
}

model CartItem {
  id               String   @id @default(cuid())
  userId           String
  productId        String   // Keep for backward compatibility and product info
  productVariantId String?  // Reference to specific variant
  quantity         Int      @default(1)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  user             User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  product          Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  productVariant   ProductVariant? @relation(fields: [productVariantId], references: [id], onDelete: Cascade)
  
  @@unique([userId, productVariantId]) // One variant per user
  @@index([userId])
  @@index([productId])
}

model Order {
  id              String      @id @default(cuid())
  userId          String
  addressId       String?     // Reference to selected address
  total           Decimal     @db.Decimal(10, 2)
  status          OrderStatus @default(PENDING)
  
  // Shipping info (denormalized for historical record)
  shippingName    String
  shippingEmail   String
  shippingPhone   String?
  shippingAddress String
  shippingCity    String
  shippingZip     String
  shippingCountry String
  shippingProvince String?
  
  // Payment info
  paymentMethod   String?     @default("bank_transfer")
  
  // Additional info
  notes           String?     @db.Text
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  user            User        @relation(fields: [userId], references: [id])
  address         Address?    @relation(fields: [addressId], references: [id])
  items           OrderItem[]
  
  @@index([addressId])
}

model OrderItem {
  id               String  @id @default(cuid())
  orderId          String
  productId        String
  productVariantId String? // Which variant was ordered
  quantity         Int
  price            Decimal @db.Decimal(10, 2)
  variantName      String? // Store variant name for historical record
  
  order            Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product          Product        @relation(fields: [productId], references: [id])
  productVariant   ProductVariant? @relation(fields: [productVariantId], references: [id])
  
  @@index([orderId])
  @@index([productId])
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

model Settings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([key])
}
